<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shevaroller.oleksiy_todos.SummaryActivity" >

    <TextView
        android:id="@+id/todos_checked_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="@string/todos_checked" />

    <TextView
        android:id="@+id/todos_unchecked_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/todos_checked_text"
        android:layout_alignLeft="@+id/todos_checked_text"
        android:layout_below="@+id/todos_checked_text"
        android:text="@string/todos_unchecked" />

    <TextView
        android:id="@+id/todos_checked_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/todos_checked_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="" />

    <TextView
        android:id="@+id/todos_unchecked_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/todos_checked_value"
        android:layout_alignEnd="@+id/todos_checked_value"
        android:layout_below="@+id/todos_checked_text"
        android:text="" />

</RelativeLayout>
